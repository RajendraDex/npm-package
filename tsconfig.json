{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@bin/*": ["bin/*"],
      "@cmd/*": ["bin/cmd/*"],
      "@utils/*": ["generator/utils/*"],
      "@writers/*": ["generator/writers/*"],
      "@base/*": ["generator/base/*"],
      "@prompt/*": ["generator/prompt/*"],
      "@project/*": ["generator/project/*"],
      "@template/*": ["generator/template/*"],
      "@observer/*": ["generator/observer/*"],
      "@generator/*": ["generator/*"],
      "@factory/*": ["generator/factory/*"],
      "@builder/*": ["generator/builder/*"],
      "@routes/*": ["src/api/core/routes/*"],
      "@routes/v1/*": ["src/api/core/routes/v1/*"]
    },
    "incremental": true,
    "removeComments": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["dom", "ESNext"],
    "target": "ES2020",
    "module": "CommonJS",
    // "module": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "bin/**/*", "generator/**/*"],
  "exclude": ["**/**/node_modules", "node_modules"]
}

